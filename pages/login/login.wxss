/* pages/login/login.wxss */
.login_container{
  position: relative;
  margin-bottom: 75rpx;
}
.login_bg{
  width:100%;
  height: 200px;
}
.login_bg_title{
  /* float: left; */
  position: absolute;
  top: 25%;
  color: #fff;
}
.login_title,.login_text{
  display: inline-block;
  width: 100%;
  text-align: center;
}
.login_text{
  margin-top: 30rpx;
}
.logo{
  position: absolute;
  width: 150rpx;
  height: 150rpx;
  bottom: -75rpx;
  left: 50%;
  margin-left: -75rpx;
}
.login_bottom{
  width: 100%;
  height: 300rpx;
  padding: 50rpx 100rpx 0;
  box-sizing: border-box;
}
.iconfont{
  position: absolute;
  bottom: 10rpx;
  color: #4cd386;
  text-align: center;
}
.login_acc{
  width: 100%;
  position: relative;
  margin-top: 50rpx;
}
.login_account{
  box-sizing: border-box;
  border-bottom: 1px solid #DADADD;
  width: 100%;
  padding-left: 80rpx;
}
.loginBtn{
  background-color: #4CD386;
  width: 70%;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50rpx;
  margin-top: 100rpx;
  color: #fff;
}
