.shops_item{
  /* height: 80rpx; */
  line-height: 80rpx;
  padding: 10rpx 30rpx;
  border-bottom: 1px solid #E7E7E8;
  display: flex;
}
.shops_item_picker{
  width: 100%;
}
.picker{
  display: flex
}
.labelName{
  flex: 1;
}
.labeValue{
  flex: 2;
}
.weight{
  flex: 1;
}
.weight_num{
  flex: 2;
  height: 80rpx;
  line-height: 80rpx;
}
.shops_bottom{
  background-color: #EEEEEE;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: inline-block;
  padding-left: 30rpx;
  box-sizing: border-box;
  position: relative;
}
.arrow_top{
  display: inline-block;
  border-top: 2px solid;
  border-right: 2px solid;
  width: 20rpx;
  height: 20rpx;
  border-color: #808080;
  transform: rotate(-45deg);
  position: absolute;
  top: 50%;
  right: 30rpx;
  margin-top: -10rpx;
}
.arrow_bottom{
  display: inline-block;
  border-top: 2px solid;
  border-right: 2px solid;
  width: 20rpx;
  height: 20rpx;
  border-color: #808080;
  transform: rotate(135deg);
  position: absolute;
  top: 50%;
  right: 30rpx;
  margin-top: -10rpx;
}
.sendBtn{
  background-color: #4CD386;
  width: 70%;
  border-radius: 50rpx;
  margin-top: 60rpx;
  margin-bottom: 60rpx;
  color: #fff;
}